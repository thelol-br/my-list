<div class="container">
    <div class="row center-align">
        <div class="col s6">
            <a href="/dashboard/edit/{{_id}}" class="waves-effect waves-light btn yellow darken-4">
                <i class="fas fa-edit"></i>
            </a>
        </div>
        <div class="col s6">
            <form action="/dashboard/{{_id}}" method="POST" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn red">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </div>
    </div>
</div>